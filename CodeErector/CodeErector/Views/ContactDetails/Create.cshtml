@model CodeErector.Models.ContactDetails

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ContactDetails</h4>
<hr />
<div class="row d-flex mx-auto">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="CDate" class="control-label">Date</label>
                <input asp-for="CDate" class="form-control" />
                <span asp-validation-for="CDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CustName" class="control-label">Name</label>
                <input asp-for="CustName" class="form-control" />
                <span asp-validation-for="CustName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="massage" class="control-label">Massage</label>
                <textarea asp-for="massage" class="form-control" rows="9"></textarea>
                <span asp-validation-for="massage" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mt-2">
        <a href="../Main/Index">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
